<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pro_image" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Anjali Sharma"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_organisation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/element_background"
        android:text="Incedo"
        android:padding="5dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:drawableLeft="@android:drawable/ic_menu_compass"
        android:layout_margin="10dp"
        android:layout_below="@+id/tv_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_designation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/element_background"
        android:text="Android Developer"
        android:padding="5dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:layout_margin="10dp"
        android:layout_below="@+id/tv_organisation"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/element_background"
        android:text="anjali.sharma@gmail.com"
        android:padding="5dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:layout_margin="10dp"
        android:layout_below="@+id/tv_designation"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/element_background"
        android:text="9987654321"
        android:padding="5dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:drawableLeft="@android:drawable/ic_menu_call"
        android:layout_margin="10dp"
        android:layout_below="@+id/tv_email"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/element_background"
        android:text="Gurugram, India"
        android:padding="5dp"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:drawableLeft="@android:drawable/ic_menu_mylocation"
        android:layout_margin="10dp"
        android:layout_below="@+id/tv_phone"
        android:layout_alignParentStart="true" />

</RelativeLayout>

</ScrollView>